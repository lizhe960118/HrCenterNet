{
    "system": {
        "dataset": "MYCOCO",
        "batch_size": 48,
        "sampling_function": "kp_detection",

        "train_split": "trainval",
        "val_split": "minival",
        "test_split": "testdev",

        "learning_rate": 0.00025,
        "decay_rate": 1.12,

        "val_iter": 500,
        "display":50,

        "opt_algo": "adam",
        "prefetch_size": 6,

        "max_iter": 480000,
        "stepsize": 5000,
        "snapshot": 5000,

        "chunk_sizes": [6,6,6,6,6,6,6,6],

        "data_dir": "/data/lizhe",
        "result_dir": "./myresults",
        "cache_dir": "./mycache",
        "pretrain": "./mycache/nnet/HRNet/HRNet_255000.pkl"
    },
    
    "db": {
        "rand_scale_min": 0.6,
        "rand_scale_max": 1.4,
        "rand_scale_step": 0.1,
        "rand_scales": null,

        "rand_crop": true,
        "rand_color": true,

        "border": 128,
        "gaussian_bump": true,

        "input_size": [511, 511],
        "output_sizes": [[128, 128]],

        "test_scales": [1],

        "top_k": 70,
        "categories": 4,
        "kp_categories": 1,
        "ae_threshold": 0.5,
        "nms_threshold": 0.5,

        "max_per_image": 100
    }
}
